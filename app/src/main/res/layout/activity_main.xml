<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisamoncada.prueba.MainActivity"
    android:visibility="visible">


    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:visibility="visible"
        android:id="@+id/space1"
        android:layout_alignParentStart="true"
        android:background="#f3f70a" />

    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignTop="@+id/space1"
        android:layout_toEndOf="@+id/space1"
        android:visibility="visible"
        android:id="@+id/space2"
        android:background="#63f012" />

    <Button
        android:layout_width="95dp"
        android:layout_height="325dp"
        android:layout_below="@+id/space1"
        android:layout_alignParentStart="true"
        android:id="@+id/space3"
        android:visibility="visible"
        android:background="#f81c0c" />

    <Button
        android:layout_width="95dp"
        android:layout_height="250dp"
        android:layout_below="@+id/space1"
        android:layout_toEndOf="@+id/space3"
        android:visibility="visible"
        android:id="@+id/space4"
        android:background="#0b21e4"
        android:focusable="true" />

    <Button
        android:layout_width="95dp"
        android:layout_height="125dp"
        android:layout_below="@+id/space4"
        android:layout_toEndOf="@+id/space3"
        android:id="@+id/space5"
        android:visibility="visible"
        android:background="#f8ec0a" />

    <Button
        android:layout_width="190dp"
        android:layout_height="325dp"
        android:visibility="visible"
        android:id="@+id/space6"
        android:background="#ffc403"
        android:layout_below="@+id/space2"
        android:layout_toEndOf="@+id/space1" />


</RelativeLayout>
